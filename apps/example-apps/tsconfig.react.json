{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "svelte",
    "dist",
    "node_modules",
    "public",
    "vite.config.ts",
    "vite.config.js",
    "vite-env.d.ts",
    "svelte-config.js",
    "scripts",
    "svelte.config.js",
    "**/tailwind.config.js"
  ]
}
