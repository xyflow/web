{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "composite": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "react",
    "dist",
    "node_modules",
    "public",
    "vite.config.ts",
    "vite.config.js",
    "vite-env.d.ts",
    "svelte-config.js",
    "scripts",
    "svelte.config.js",
    "**/tailwind.config.js"
  ]
}
